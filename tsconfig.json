{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@locales/*": ["locales/*"],
      
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],

      "@mytools/*": ["my_tools/*"],
      "@stores/*": ["stores/*"],
      "@models/*": ["models/*"],
      "@appTypes/*": ["types/*"],
      "@interfaces/*": ["interfaces/*"],  
      "@services/*": ["services/*"],
      "@validation/*": ["validation/*"],
      "@hooks": ["hooks"],
      "@helpers/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@theme/*": ["theme/*"],
      "@layouts/*": ["layouts/*"],

    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strictPropertyInitialization": false,
    "noImplicitAny": true
  },
  "include": [
    "src"
  ]
}
